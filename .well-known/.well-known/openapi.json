{
  "openapi": "3.0.1",
  "info": {
    "title": "Glowth Check-In Logger",
    "description": "Send weekly project updates from GPT to Glowth's automation system via webhook.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://glowthacademy.github.io/glowth-gpt-plugin"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "summary": "Log a project update",
        "operationId": "logProjectUpdate",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "Project": { "type": "string" },
                  "Week": { "type": "string" },
                  "Update Summary": { "type": "string" },
                  "Status": { "type": "string" },
                  "Blockers": { "type": "string" },
                  "Notes": { "type": "string" },
                  "Priority": { "type": "string" }
                },
                "required": [
                  "Project", "Week", "Update Summary",
                  "Status", "Blockers", "Notes", "Priority"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update accepted"
          }
        }
      }
    }
  }
}
